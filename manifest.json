{
  "manifest_version": 2,
  "name": "WikiRecorder",
  "version": "1.0",

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/page-16.png",
      "32": "icons/page-32.png"
    }
  },

  "description": "Record clicked links during Wikigames sessions and display them on HTML page.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"

  },

  "permissions": [
          "history",
          "activeTab"
        ],

  "background": {
  "scripts" : [
    "background.js",
    "jspdf.js"
    ]
  }

}
